{
  "assistant": {
    "default_model": {
      "provider": "ollama",
      "model": "qwen2.5-coder:latest"
    },
    "version": "2"
  },
  "features": {
    "inline_completion_provider": "copilot"
  },
  "project_panel": {
    "dock": "left"
  },
  "outline_panel": {
    "dock": "left"
  },
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": false,
    "use_system_clipboard": "always"
  },
  "relative_line_numbers": true,
  "ui_font_size": 14,
  "buffer_font_size": 12,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "current_line_highlight": "gutter",
  "theme": {
    "mode": "system",
    "light": "Kanagawa Dragon",
    "dark": "One Dark Pro Monokai Darker"
  },
  "terminal": {
    "font_size": 12,
    "font_family": "JetBrainsMono Nerd Font"
  },
  "scrollbar": {
    "show": "auto",
    "cursors": true,
    "git_diff": true,
    "search_results": true,
    "selected_symbol": true,
    "diagnostics": true
  },
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true,
    "activate_on_close": "history"
  },
  "soft_wrap": "editor_width",
  "show_wrap_guides": true,
  "show_whitespaces": "all",
  "enable_language_server": true,
  "ensure_final_newline_on_save": true,
  "formatter": "prettier",
  "use_autoclose": true,
  "use_auto_surround": true,
  "always_treat_brackets_as_autoclosed": true,
  "git": {
    "inline_blame": {
      "enabled": true
    }
  },
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 1,
    "coloring": "fixed",
    "background_coloring": "disabled"
  },
  "lsp": {
    "wakatime": {
      "settings": {}
    }
  },
  "languages": {
    "Go": {
      "code_actions_on_format": {
        "enabled": true
      },
      "format_on_save": {
        "external": {
          "command": "goimports",
          "arguments": []
        }
      },
      "gopls": {
        "analyses": {
          "unusedparams": true,
          "shadow": true
        },
        "staticcheck": true
      }
    }
  }
}
